{
    "name": "Studio",
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "description": "Studio name"
      },
      "hq_location": {
        "type": "string",
        "description": "Headquarters location"
      },
      "phone": {
        "type": "string",
        "description": "Studio phone number"
      },
      "studio_email": {
        "type": "string",
        "description": "Studio contact email"
      },
      "currency": {
        "type": "string",
        "default": "USD",
        "description": "Currency code"
      },
      "invite_code": {
        "type": "string",
        "description": "Unique 8-character invite code"
      },
      "is_active": {
        "type": "boolean",
        "default": false,
        "description": "Whether studio is active and validated"
      },
      "timezone": {
        "type": "string",
        "default": "UTC",
        "description": "Studio timezone"
      },
      "subscription_tier": {
        "type": "string",
        "default": "basic",
        "description": "Subscription tier"
      },
      "email_reminders_enabled": {
        "type": "boolean",
        "default": false,
        "description": "Whether email reminders are enabled"
      },
      "reminder_minutes_before": {
        "type": "number",
        "default": 1440,
        "description": "Minutes before appointment to send reminder"
      },
      "owner_id": {
        "type": "string",
        "description": "Studio owner user ID"
      }
    },
    "required": [
      "name",
      "invite_code",
      "owner_id"
    ],
    "rls": {
      "read": {
        "id": "{{user.data.studio_id}}"
      },
      "update": {
        "user_condition": {
          "data.user_role": "Owner"
        }
      },
      "delete": {
        "user_condition": {
          "data.user_role": "Owner"
        }
      },
      "write": {
        "user_condition": {
          "data.user_role": "Owner"
        }
      }
    }
  }